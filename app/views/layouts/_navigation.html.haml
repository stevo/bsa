.navbar-header
  = link_to 'BSApp', root_path, class: 'navbar-brand'
.collapse.navbar-collapse.pull-right
  %ul.nav.navbar-nav
    - if user_signed_in?
      %li
        = link_to t('links.account.edit'), edit_user_registration_path
      - if current_user.has_role? :admin
        %li.dropdown
          = link_to t('links.admin'), '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
          %ul.dropdown-menu
            %li= link_to t('links.admin'), admin_users_path
            %li=link_to t('links.forums'), admin_forums_path
        %li
          = link_to t('links.cms_admin'), cms_admin_path, data: { no_turbolink: true }
    - if user_signed_in?
      %li
        = link_to t('common.logout'), destroy_user_session_path, method: 'delete'
