%h3= t('users.index.header')
.span11
  %table.table.table-striped
    %thead
      %tr
        %th= t('simple_form.labels.user.name')
        %th= t('simple_form.labels.user.email')
        %th= t('simple_form.labels.user.membership_name')
        %th= t('simple_form.labels.user.created_at')
        %th= t('simple_form.labels.user.role')
        %th
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.name, [:admin, user]
          %td= user.email
          %td= user.membership_state
          %td= user.created_at.to_date
          %td= user.roles.first.name.titleize unless user.roles.first.nil?
          %td= link_to t('links.user.rights'), edit_admin_user_rights_path(user), class: 'btn btn-mini', data: {colorbox: true}
          %td= link_to(t('links.user.destroy'), admin_user_path(user), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-mini') unless user == current_user
          %td= link_to t('links.user.contributions'), admin_user_contributions_path(user), class: 'btn btn-mini'
