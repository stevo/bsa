%h3= t('users.index.header')
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th Username
        %th Email
        %th Registered
        %th Role
        %th
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.name, [:admin, user]
          %td= user.email
          %td= user.created_at.to_date
          %td= user.roles.first.name.titleize unless user.roles.first.nil?
          %td= link_to 'Uprawnienia', edit_admin_user_rights_path(user), class: 'btn btn-mini', data: {colorbox: true}
          %td= link_to("Delete user", admin_user_path(user), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-mini') unless user == current_user
          %td= link_to 'SkÅ‚adki', admin_user_contributions_path(user), class: 'btn btn-mini'
